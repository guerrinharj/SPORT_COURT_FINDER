<%= simple_form_for(@court) do |f| %>
  <%= f.input :name %>
  <%= f.input :location %>
  <%= f.input :availability, as: :boolean, checked_value: true, unchecked_value: false %>
  <%= f.number_field :pricing  %>
  <%= f.number_field :capacity  %>
  <%= f.submit %>
<% end %>

<% if policy(Court).create? %>
  <%= link_to "New court", new_court_path %>

<% end %>
